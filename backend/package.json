{
  "name": "mutiny-backend",
  "description": "Mutiny Backend",
  "keywords": [],
  "author": "Paul Lee",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "main": "src/server.js",
  "packageManager": "pnpm@9.4.0",
  "prettier": "@repo/config-prettier",
  "prisma": {
    "schema": "database/schema.prisma"
  },
  "scripts": {
    "setup": "tsx ./scripts/project-setup.ts",
    "watch": "tsx ./scripts/run-env.ts -- tsx watch ./src/server.ts",
    "build": "swc ./src -d dist",
    "clean": "tree ./dist -L 1 | head && rm -rfI ./dist",
    "typecheck": "tsc --noEmit || true",
    "lint": "eslint . || true",
    "format": "prettier . --write",
    "test:integration": "tsx ./scripts/test-integration.ts",
    "database:migrate:new": "tsx ./scripts/run-env.ts -- prisma migrate dev",
    "database:migrate:apply": "tsx ./scripts/run-env.ts -- prisma migrate deploy"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^4.0.0",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@node-rs/argon2": "^1.8.3",
    "@prisma/client": "5.16.2",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "lucia": "^3.2.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.5.0",
    "@repo/config-eslint": "workspace:*",
    "@repo/config-prettier": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@swc/cli": "^0.4.0",
    "@swc/core": "1.6.13",
    "@types/node": "^20.14.10",
    "eslint": "~9.6.0",
    "pino-pretty": "^11.2.1",
    "prettier": "3.3.2",
    "prisma": "^5.16.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.1",
    "zx": "^8.1.4"
  }
}