{
  "name": "@repo/data",
  "type": "module",
  "private": true,
  "prettier": "@repo/config-prettier",
  "scripts": {
    "build": "swc ./src --out-dir ./dist --copy-files",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "formatcheck": "prettier . --check",
    "format": "prettier . --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "exports": {
    "./db": {
      "types": "./src/db/client.ts",
      "default": "./dist/src/db/client.js"
    },
    "./drizzle": {
      "types": "./src/db/lib.ts",
      "default": "./dist/src/db/lib.js"
    },
    "./tables": {
      "types": "./src/db/tables/index.ts",
      "default": "./dist/src/db/tables/index.js"
    },
    "./schemas": {
      "types": "./src/schemas/index.ts",
      "default": "./dist/src/schemas/index.js"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "drizzle-orm": "^0.32.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/config-eslint": "workspace:*",
    "@repo/config-prettier": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@swc/cli": "^0.4.0",
    "@swc/core": "1.6.13",
    "@types/better-sqlite3": "^7.6.11",
    "drizzle-kit": "^0.23.0",
    "typescript": "^5.5.3"
  }
}
