{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#setup": {
      "cache": false
    },
    "setup": {
      "dependsOn": [
        "//#setup"
      ],
      "cache": false
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [
        "dist/**"
      ]
    },
    "typecheck": {},
    "lint": {},
    "formatcheck": {},
    "check": {
      "dependsOn": [
        "typecheck",
        "lint",
        "formatcheck"
      ]
    },
    "format": {
      "dependsOn": [
        "typecheck",
        "lint"
      ],
      "cache": false
    },
    "test:integration": {
      "passThroughEnv": [
        "FORCE_LOG"
      ]
    },
    "test": {
      "dependsOn": [
        "test:integration"
      ]
    }
  }
}